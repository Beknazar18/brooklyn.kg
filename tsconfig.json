{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "/",
    "paths": {
      "~/*": ["./resources/*"]
    }
  },
  "files": [
    "index.d.ts",
    "i18n.d.ts"
  ]
}
